{
  "compilerOptions": {
    "allowJs": false,
    "rootDir": "src/js",
    "outDir": "src/js",
    "module": "es6",
    "target": "es2018",
    "removeComments": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "sourceMap": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": []
}
